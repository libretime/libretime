/usr/local/var/log/liquidsoap/*.log {
  compress
  rotate 5
  size 300k
  missingok
  notifempty
  sharedscripts
  postrotate
    for liq in /usr/local/var/run/liquidsoap/*.pid ; do
      if test $liq != '/usr/local/var/run/liquidsoap/*.pid' ; then
        start-stop-daemon --stop --signal USR1 --quiet --pidfile $liq
      fi
    done
  endscript
}
