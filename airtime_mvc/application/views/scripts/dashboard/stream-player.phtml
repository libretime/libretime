<script>
function setjPlayer(url, type){
    var obj = new Object();
    obj[type] = url;
    
    $("#jquery_jplayer_1").jPlayer("destroy");
    $("#jquery_jplayer_1").jPlayer({
        ready: function () {
            $(this).jPlayer("setMedia", obj).jPlayer("play");
        },
        ended: function (event) {
            $(this).jPlayer("play");
        },
        swfPath: "js",
        supplied: type,
        wmode: "window"
    });
}

